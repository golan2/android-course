<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:text="Name" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:id="@+id/nameTextView" android:paddingLeft="10px"></TextView>
    <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content" android:text="Location" android:layout_alignBaseline="@+id/nameTextView" android:layout_alignBottom="@+id/nameTextView" android:layout_alignParentRight="true" android:id="@+id/locationTextView" android:paddingRight="10px"></TextView>
    
</RelativeLayout>
